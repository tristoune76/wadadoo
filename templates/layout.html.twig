{# templates/layout.html.twig #}

<html lang="en">

  <head>

    <!-- Required meta tags -->

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- Bootstrap CSS -->
    {% block stylesheet %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <!-- <link rel="stylesheet" href="css/style.css" /> -->
    {% endblock %}
    <title>{% block title %}Wadadoo{% endblock %}</title>

  </head>

  <body>

	<div class="bg-primary">
		<div class= "container">
            <nav class = "col-9 navbar navbar-expand navbar-dark">
                {# title display in the navbar on the left#}
                <a class = "navbar-brand mx-1" href = "{{ (path('wadadoo_home') }}">Wadadoo</a>
            </nav>
            <nav class = "col-3 navbar navbar-expand navbar-dark">
                {# user display in the navbar on the right#}
                {% block navBarUser %}{% endblock %}
            </nav>
		</div>
	</div>

	<div class ="container">
    {# Jumbotron #}
        <div class = "row">
            <div id = "jumbotron" class="col jumbotron text-center mb-0 mt-1">
                <h1>Bienvenue sur Wadadoo</h1>
                <h2>Le site où l'on note ce qu'on fait !</h2>
            </div>
        </div>
    {# main frame #}    
        <div id = "content" class ="row">{% block mainBlock %}{% endblock %}</div>
	</div>

    <footer>
        <div class="bg-light">
            <div class="container">
                <div class="row my-3 ">
                    <ul class="list-inline col text-center ">
                        <li class="list-inline-item font-weight-bold">A propos</li>
                        <li class="list-inline-item font-weight-normal">Vie privée</li>
                        <li class="list-inline-item font-weight-normal">Conditions d'utilisation</li>
                    </ul>
                </div>
            </div>
        </div>
	</footer>



    <!-- Optional JavaScript -->

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  </body>

</html>

